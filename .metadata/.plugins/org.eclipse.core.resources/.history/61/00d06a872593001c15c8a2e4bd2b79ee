import java.util.Arrays;

public class StringExample {

	public static void main(String[] args) {
		
      StringBuffer sb=new StringBuffer("Hello");
      
      
      sb.reverse();
      
      System.out.println(sb);

      
      sb.replace(1, 4, "java");
      
      System.out.println(sb);
      
      
      sb.deleteCharAt(0);
      
      System.out.println(sb);
      
      sb.delete(1, 3);
      
      System.out.println(sb);
      
		
	}
	
	
	

}
